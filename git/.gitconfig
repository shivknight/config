[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[user]
	name = Shiv Pande
	email = shivknight@gmail.com
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = fugitive

[alias]
        cp = cherry-pick
        st = status -sb
        ci = commit
        co = checkout
        br = branch
        dt = difftool
        lg = log --color --left-right --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
        lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
        lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	qf = !git fixup $@ && !git autosquash
	fixup = commit --fixup HEAD
	autosquash = !GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash HEAD~2
	pr = pull-request
	pushf = push --force-with-lease
        gra = git rebase --abort
        grc = git rebase --continue
#        lg = !"git lg1"
#        rebaseb = rebase -i $(git merge-base master update_jenkinsfile)
        sl = stash list --pretty=format:\"%C(red)%h%C(reset) - %C(dim yellow)(%C(bold magenta)%gd%C(dim yellow))%C(reset) %<(70,trunc)%s %C(green)(%cr) %C(bold blue)<%an>%C(reset)\"
[core]
	excludesfile = /home/shiv/.gitignore
[mergetool "fugitive"]
	cmd = vim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[commit]
	verbose = true
